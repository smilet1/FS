@model IEnumerable<FS.Models.Genre>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список Жанров</h2>
        </div>
        <div class="col-6">
        </div>
    </div>

    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Название Жанра
                    </th>
                    <th>
                        <a asp-action="Upsert" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Добавить Жанр
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="80%">@obj.Name</td>
                        <td class="text-center">
                            <div class="w-10 btn-group" role="group">
                                <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <a asp-action="Upsert" class="btn btn-primary">
            <i class="fas fa-plus"></i> Добавить Подборку
        </a>
        <p>Категория не существует</p>
    }
</div>


