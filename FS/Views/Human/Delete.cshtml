@model FS.Models.Human

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Удалить</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="FullName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="FullName" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="BirthDate"></label>
                    </div>
                    <div class="col-8">
                        <input type="date" disabled asp-for="BirthDate" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DeathDate"></label>
                    </div>
                    <div class="col-8">
                        <input type="date" disabled asp-for="DeathDate" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Удалить" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Вернуться</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @if (Model.Id != 0)
                {
                    <img src="@WC.ImagePath@Model.Img" width="100%" style="border-radius:5px; border:1px; solid:#bbb" />
                }
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}